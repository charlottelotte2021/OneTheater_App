<main class="main-container">
    <%- include('partials/search') %>


    <h1>Happening today</h1>

<section class="cards-container"> 

 <% allplays = allplays.slice(0,5) %>
    <% allplays.forEach((Play) => { %>

      <%  Play.playsInstances.forEach((playInstance) => { %>
        <article class="card play-card">
            <div class="play-card-header">
                <h2 ><a class="play-card-title" href="/play/<%= `${Play._id}/${playInstance._id}` %>"><%= Play.title%></a></h2>
                <% if (user) { %>
                    <button class="play-card-bookmark" data-play-instance-id="<%= playInstance._id %>">
                    <% if (user.wishlist.some(entry => entry.playInstanceId.toString() == playInstance._id.toString())) { // if the id is somewhere in the wishlist %>
                        <i class="fas fa-bookmark"></i>
                    <% } else { %>
                        <i class="far fa-bookmark"></i>
                    <% } %>
                    </button>
                <% } %>
            </div> 

            <div class="play-card-content">
                <div class="card-row">
                    <div class="play-card-dates"><%= playInstance.date%></div>

                    <div class="play-card-theater"><%= playInstance.theater.name %></div>
                </div>
                <div class="card-row">
                    <div class="">
                        <div class="play-card-summary"> 
                            <p><%= playInstance.summary%> <br>
                            </p>
                            <button class="play-card-summary-seemore"><i class="fas fa-angle-down"></i></button>
                        </div> 
        
                        <div><%= Play.director%></div>  
                        <div><%= Play.production%>  
                        </div>
                    </div>

                    <div class="pic-reviews">
                        <img class="play-card-poster" src=<%= playInstance.image%> alt="">
                        <div class="play-card-reviews">
                            <a href="#" class="reviews-link">
                                <p>Read Ã— reviews</p>
                                <div class="review-stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                            </a>
                        </div>
                    </div>    
                </div>
            </div>  
        </article>
<% }) %>
<% }) %>
</section>


</main>